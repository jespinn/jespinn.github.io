---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Evidencias">

<section class="px-3 py-20">
  <div class="max-w-5xl mx-auto">

    <h1 class="text-4xl md:text-5xl font-bold mb-10 text-center">
      Evidencias del Portafolio
    </h1>

    <div class="grid md:grid-cols-2 gap-8">

      <!-- MODELADO -->
      <div class="bg-white border-3 p-8 shadow-[8px_8px_0px_rgba(0,0,0,0.3)]">
        <h2 class="text-2xl font-semibold mb-3">Modelado</h2>
        <p class="opacity-80">
          Diagramas ER, entidades, atributos y relaciones.
        </p>
      </div>

      <!-- NORMALIZACIÓN -->
      <div class="bg-white border-3 p-8 shadow-[8px_8px_0px_rgba(0,0,0,0.3)]">
        <h2 class="text-2xl font-semibold mb-3">Normalización</h2>
        <p class="opacity-80">
          1FN, 2FN y 3FN para evitar redundancia y mejorar integridad.
        </p>
      </div>

      <!-- SQL -->
      <div class="bg-white border-3 p-8 shadow-[8px_8px_0px_rgba(0,0,0,0.3)]">
        <h2 class="text-2xl font-semibold mb-3">SQL</h2>
        <p class="opacity-80">
          SELECT, JOIN, WHERE, GROUP BY y subconsultas.
        </p>
      </div>

      <!-- PROYECTO -->
      <div class="bg-white border-3 p-8 shadow-[8px_8px_0px_rgba(0,0,0,0.3)]">
        <h2 class="text-2xl font-semibold mb-3">Proyecto</h2>
        <p class="opacity-80">
          Implementación final del portafolio en GitHub Pages.
        </p>
      </div>

    </div>

  </div>
</section>

</Layout>