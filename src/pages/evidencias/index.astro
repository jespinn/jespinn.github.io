---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Evidencias">

<section class="px-3 py-20">
  <div class="max-w-5xl mx-auto">

    <!-- TÍTULO -->
    <h1 class="text-4xl md:text-5xl font-bold text-center mb-4">
      Evidencias del Portafolio
    </h1>

    <!-- CATEGORÍAS (LO QUE PIDE EL PROFE) -->
    <p class="text-center opacity-70 mb-12 text-lg">
      Modelado | Normalización | SQL | Proyecto
    </p>

    <!-- GRID -->
    <div class="grid md:grid-cols-2 gap-8">

      <!-- MODELADO -->
      <div class="bg-white border-3 p-8 shadow-[8px_8px_0px_rgba(0,0,0,0.3)] hover:-translate-y-1 transition">
        <h2 class="text-2xl font-semibold mb-3">Modelado</h2>
        <p class="opacity-80">
          Diagramas ER, entidades, atributos y relaciones de bases de datos.
        </p>
      </div>

      <div class="bg-white border-3 p-8 shadow-[8px_8px_0px_rgba(0,0,0,0.3)] hover:-translate-y-1 transition">
        <h2 class="text-2xl font-semibold mb-3">Normalización</h2>
        <p class="opacity-80">
          Aplicación de 1FN, 2FN y 3FN para reducir redundancia y mejorar integridad.
        </p>
      </div>

      <div class="bg-white border-3 p-8 shadow-[8px_8px_0px_rgba(0,0,0,0.3)] hover:-translate-y-1 transition">
        <h2 class="text-2xl font-semibold mb-3">SQL</h2>
        <p class="opacity-80">
          Consultas SELECT, JOIN, WHERE, GROUP BY y subconsultas.
        </p>
      </div>

      <div class="bg-white border-3 p-8 shadow-[8px_8px_0px_rgba(0,0,0,0.3)] hover:-translate-y-1 transition">
        <h2 class="text-2xl font-semibold mb-3">Proyecto</h2>
        <p class="opacity-80">
          Implementación final del portafolio usando GitHub Pages y Astro.
        </p>
      </div>

    </div>

  </div>
</section>

</Layout>