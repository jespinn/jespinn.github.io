---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Evidencias | Modelo Entidad Relación">

<section class="px-3 py-20 bg-gray-50">
  <div class="max-w-5xl mx-auto">

    <h1 class="text-4xl md:text-6xl font-black text-center mb-16 uppercase tracking-tighter">
      Modelo Entidad Relación
    </h1>

    <div class="flex flex-col gap-20">

      <article class="flex flex-col items-center">
        <h2 class="text-3xl font-bold mb-6 text-gray-800 self-start border-l-8 border-red-500 pl-4">
          Ejercicio Aeropuerto BD1
        </h2>
        <div class="w-full bg-white border-4 border-black shadow-[12px_12px_0px_rgba(0,0,0,1)] rounded-sm overflow-hidden">
          <img 
            src="/Ejercicio Aeropuerto BD1.png" 
            alt="Diagrama de Aeropuerto" 
            class="w-full h-auto display-block"
          />
        </div>
      </article>

      <article class="flex flex-col items-center">
        <h2 class="text-3xl font-bold mb-6 text-gray-800 self-start border-l-8 border-blue-500 pl-4">
          Ejercicio Hospital BD1
        </h2>
        <div class="w-full bg-white border-4 border-black shadow-[12px_12px_0px_rgba(0,0,0,1)] rounded-sm overflow-hidden">
          <img 
            src="/Ejercicio Hospital BD1.png" 
            alt="Diagrama de Hospital" 
            class="w-full h-auto display-block"
          />
        </div>
      </article>

      <article class="flex flex-col items-center">
        <h2 class="text-3xl font-bold mb-6 text-gray-800 self-start border-l-8 border-purple-500 pl-4">
          Ejercicio Streaming BD1
        </h2>
        <div class="w-full bg-white border-4 border-black shadow-[12px_12px_0px_rgba(0,0,0,1)] rounded-sm overflow-hidden">
          <img 
            src="/Ejercicio Streaming BD1.png" 
            alt="Diagrama de Streaming" 
            class="w-full h-auto display-block"
          />
        </div>
      </article>

    </div>
  </div>
</section>

</Layout>

<style>
  /* Optimizamos para que las imágenes no se vean borrosas y mantengan su calidad original */
  img {
    image-rendering: auto;
    transition: transform 0.3s ease;
  }
  
  article:hover img {
    transform: scale(1.01);
  }
</style>