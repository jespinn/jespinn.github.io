---
const cards = [
  {
    title: "Modelado",
    desc: "Diagramas ER, entidades, atributos y relaciones de bases de datos.",
    img: "https://images.pexels.com/photos/590022/pexels-photo-590022.jpeg?auto=compress&cs=tinysrgb&w=1200",
    link: "/evidencias/#modelado",
  },
  {
    title: "Normalización",
    desc: "Aplicación de 1FN, 2FN y 3FN para reducir redundancia y mejorar integridad.",
    img: "https://images.pexels.com/photos/669615/pexels-photo-669615.jpeg?auto=compress&cs=tinysrgb&w=1200",
    link: "/evidencias/#normalizacion",
  },
  {
    title: "SQL",
    desc: "Consultas SELECT, JOIN, WHERE, GROUP BY y subconsultas.",
    img: "https://images.pexels.com/photos/577585/pexels-photo-577585.jpeg?auto=compress&cs=tinysrgb&w=1200",
    link: "/evidencias/#sql",
  },
  {
    title: "Proyecto",
    desc: "Implementación final del portafolio usando GitHub Pages y Astro.",
    img: "https://images.pexels.com/photos/270348/pexels-photo-270348.jpeg?auto=compress&cs=tinysrgb&w=1200",
    link: "/evidencias/#proyecto",
  },
];
---

<section class="px-3 pb-20">
  <div class="max-w-4xl mx-auto">

    <h2 class="text-4xl font-medium text-center">
      Evidencias del Portafolio
    </h2>
    <p class="text-center opacity-70 mt-3 mb-10 text-lg">
      Modelado | Normalización | SQL | Proyecto
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {cards.map((item) => (
        <a href={item.link} class="block border-3 border-black bg-white shadow-[8px_8px_0px_rgba(0,0,0,0.25)] hover:-translate-y-1 transition">
          <div class="p-4">
            <img src={item.img} alt={item.title} class="w-full border-2 border-black" />
          </div>

          <div class="px-6 pb-6">
            <div class="flex items-start gap-3">
              <h3 class="text-2xl font-bold flex-1">{item.title}</h3>
              <div class="border-2 border-black size-8 flex items-center justify-center">
                ↗
              </div>
            </div>
            <p class="mt-2 opacity-80">
              {item.desc}
            </p>
          </div>
        </a>
      ))}
    </div>

  </div>
</section>